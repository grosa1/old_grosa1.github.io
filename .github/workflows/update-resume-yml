name: Update Resume PDF

on:
  repository_dispatch:
    types: [event-update-resume]

jobs:
  fetch_and_push_release:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Download latest release PDF
        id: download
        uses: dsaltares/fetch-gh-release-asset@master
        with:
          repo: "grosa1/techResume"
          version: "latest"
          file: "resume.pdf"
          target: "./assets/pdf/resume.pdf"
          token: ${{ secrets.GITHUB_TOKEN }}
          
      - name: Commit and Push Downloaded PDF
        run: |
          git config --global user.name 'GitHub Action'
          git config --global user.email 'action@github.com'
          git add ./assets/pdf/resume.pdf
          git commit -m "Action: Update Resume PDF"
          git push origin master
